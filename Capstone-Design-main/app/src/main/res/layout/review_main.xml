<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E6E6E6"
        android:id="@+id/fragmentBor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_place"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:text="장소 이름"
                android:fontFamily="@font/dohyon_ttf"
                android:textSize="27sp"/>

            <Button
                android:id="@+id/review_enroll_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background_round"
                android:fontFamily="@font/dohyon_ttf"
                android:text="리뷰 등록"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF1DDF98"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/review_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dohyon_ttf"
                android:text="별점 0.0점"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt_refresh_review"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_popup_sync"
                android:backgroundTint="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="20dp">
            <ListView
                android:id = "@+id/review_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>