<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/button_background_round"
    android:backgroundTint="#FFFFFF">

    <TextView
        android:id="@+id/road_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="경로 우선"
        android:textColor="#FF1DDF98"
        android:fontFamily="@font/dohyon_ttf"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:id = "@+id/clickArea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예상 소요시간"
            android:fontFamily="@font/dohyon_ttf"
            android:id="@+id/road_time"
            android:layout_marginTop="14dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#FF1DDF98">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="거리: OOOm"
                android:id="@+id/road_distance"
                android:fontFamily="@font/dohyon_ttf"
                android:textSize="15dp"
                android:layout_marginTop="15dp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>